{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "strictPropertyInitialization": false,
    "baseUrl": "./"
  },
  "include": ["src/**/*", "package.json"]
}
